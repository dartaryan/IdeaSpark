{
  "$schema": "https://daisyui.com/theme-schema.json",
  "name": "pasportcard",
  "description": "Pasportcard DSM theme for DaisyUI - Complete design token export for IdeaSpark project",
  "version": "1.0.0",
  "theme": {
    "colors": {
      "primary": "#E10514",
      "primary-focus": "#AD0F0F",
      "primary-content": "#FFFFFF",
      "secondary": "#1D1C1D",
      "secondary-focus": "#000000",
      "secondary-content": "#FFFFFF",
      "accent": "#2246FC",
      "accent-focus": "#1B38CA",
      "accent-content": "#FFFFFF",
      "neutral": "#525355",
      "neutral-focus": "#1D1C1D",
      "neutral-content": "#FFFFFF",
      "base-100": "#FFFFFF",
      "base-200": "#F5F4F2",
      "base-300": "#EEEDE9",
      "base-content": "#1D1C1D",
      "info": "#2246FC",
      "info-content": "#FFFFFF",
      "success": "#10B981",
      "success-content": "#FFFFFF",
      "warning": "#F59E0B",
      "warning-content": "#FFFFFF",
      "error": "#AD0F0F",
      "error-content": "#FFFFFF"
    },
    "borderRadius": {
      "box": "1.25rem",
      "btn": "1.25rem",
      "badge": "99px",
      "card": "1.25rem",
      "input": "1.25rem"
    },
    "animation": {
      "btn": "0.15s",
      "input": "0.15s"
    },
    "other": {
      "btn-focus-scale": "0.98",
      "border-btn": "1px",
      "tab-border": "2px",
      "tab-radius": "1.25rem"
    }
  },
  "cssVariables": {
    "brand": {
      "red": "#E10514",
      "darkRed": "#AD0F0F",
      "black": "#1D1C1D",
      "white": "#FFFFFF",
      "gradientStart": "#E10514",
      "gradientEnd": "#A2191C"
    },
    "text": {
      "primary": "#1D1C1D",
      "secondary": "#525355",
      "disabled": "#67686A",
      "placeholder": "#525355",
      "note": "#4A4C4F",
      "negative": "#FFFFFF",
      "linkPrimary": "#2246FC",
      "linkSecondary": "#E10514",
      "error": "#AD0F0F",
      "alerts": "#AD0F0F"
    },
    "background": {
      "primary": "#FFFFFF",
      "secondary": "#F5F4F2",
      "tertiary": "#EEEDE9",
      "overlay": "rgba(29, 28, 29, 0.5)",
      "disabledInputs": "#EEEEEE",
      "cardPrimary": "#FFFFFF",
      "cardSecondary": "#F5F4F2",
      "cardTertiary": "#FCF2F1",
      "cardNote": "#FFFBAC"
    },
    "border": {
      "default": "#525355",
      "inputs": "#DFDFDF",
      "cards": "#DFDAD5",
      "focus": "#1D1C1D",
      "error": "#AD0F0F",
      "divider": "#E10514",
      "negative": "#FFFFFF"
    },
    "button": {
      "primary": "#E10514",
      "secondary": "#E10514",
      "hover": "#E10514",
      "tertiaryHover": "#EEEEEE",
      "disabled": "#FBD9DC",
      "inactive": "#525355"
    },
    "spacing": {
      "0": "0",
      "3xs": "0.125rem",
      "2xs": "0.1875rem",
      "xs": "0.25rem",
      "xs-plus": "0.375rem",
      "sm": "0.5rem",
      "sm-plus": "0.625rem",
      "md": "0.75rem",
      "lg": "1rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "2rem",
      "4xl": "2.5rem",
      "5xl": "3rem",
      "6xl": "4rem",
      "7xl": "5rem",
      "8xl": "6rem"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "md": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.625rem",
      "4xl": "2.5rem"
    },
    "fontWeight": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "fontFamily": {
      "english": "'Montserrat', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "hebrew": "'Rubik', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "mono": "'JetBrains Mono', 'Fira Code', ui-monospace, 'SF Mono', monospace"
    },
    "borderWidth": {
      "none": "0",
      "thin": "0.0625rem",
      "medium": "0.125rem",
      "thick": "0.1875rem"
    },
    "borderRadius": {
      "none": "0",
      "xs": "0.3125rem",
      "s": "0.625rem",
      "md": "1.25rem",
      "pill": "99px"
    },
    "shadow": {
      "card": "0px 4px 20px 0px rgba(29, 28, 29, 0.15)",
      "buttonPrimary": "0px 6px 11px 0px rgba(225, 5, 20, 0.50)",
      "tabsSelected": "0.03125rem 0.125rem 0.625rem rgba(0, 0, 0, 0.1), -0.03125rem 0.125rem 0.625rem rgba(0, 0, 0, 0.1)"
    },
    "componentSpacing": {
      "button": {
        "paddingX": {
          "sm": "0.5rem",
          "md": "0.75rem",
          "lg": "1rem"
        },
        "paddingY": {
          "sm": "0.25rem",
          "md": "0.5rem",
          "lg": "0.75rem"
        },
        "gap": "0.5rem"
      },
      "input": {
        "paddingX": "0.75rem",
        "paddingY": "0.5rem"
      },
      "card": {
        "padding": "1rem",
        "gap": "0.75rem"
      },
      "form": {
        "fieldGap": "1rem",
        "labelGap": "0.25rem"
      }
    }
  },
  "tailwindConfig": {
    "extend": {
      "colors": {
        "brand-red": "#E10514",
        "brand-dark-red": "#AD0F0F",
        "brand-black": "#1D1C1D",
        "brand-white": "#FFFFFF"
      }
    }
  },
  "fonts": {
    "googleFonts": [
      {
        "family": "Montserrat",
        "weights": [400, 500, 600, 700],
        "url": "https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap"
      },
      {
        "family": "Rubik",
        "weights": [400, 500, 600, 700],
        "url": "https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700&display=swap"
      },
      {
        "family": "JetBrains Mono",
        "weights": [400, 500, 600, 700],
        "url": "https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap"
      }
    ]
  }
}
